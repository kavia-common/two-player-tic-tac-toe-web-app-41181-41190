# PUBLIC_INTERFACE
# Example environment variables for the Tic Tac Toe frontend.
# Copy to .env and adjust as needed. Do NOT commit real secrets.

# Core
REACT_APP_PORT=3000
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_ENABLE_SOURCE_MAPS=false

# Optional integrations (placeholders)
REACT_APP_FRONTEND_URL=
REACT_APP_BACKEND_URL=
REACT_APP_API_BASE=
REACT_APP_WS_URL=

# Feature flags
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=

# Optional OpenAI Chatbot (disabled unless REACT_APP_ENABLE_CHATBOT=true)
REACT_APP_ENABLE_CHATBOT=false
REACT_APP_OPENAI_API_KEY=
REACT_APP_OPENAI_API_BASE=https://api.openai.com/v1
REACT_APP_OPENAI_MODEL=gpt-4o-mini

