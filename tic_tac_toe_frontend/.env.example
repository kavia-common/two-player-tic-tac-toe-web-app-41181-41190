# PUBLIC_INTERFACE
# Example environment variables for the React dev server and optional features.
# Copy this file to .env and adjust as needed.

# Preferred port for the dev server (CI may override)
REACT_APP_PORT=3000

# Optional: set to "true" in CI to enable reduced watcher behavior (use npm run start:ci)
# Note: scripts already set CI=true for start:ci and start:ci:quiet
REACT_APP_NODE_ENV=development

# Optional: disable source maps to reduce memory during builds
REACT_APP_ENABLE_SOURCE_MAPS=false

# Optional: disable fast refresh for quieter CI logs
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Trust proxy is irrelevant in CRA dev server but listed for completeness
REACT_APP_TRUST_PROXY=false

# Healthcheck path is fixed to /healthz
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags (JSON string) - not used by default
REACT_APP_FEATURE_FLAGS={}
REACT_APP_EXPERIMENTS_ENABLED=false

# Optional Chatbot (disabled by default)
REACT_APP_ENABLE_CHATBOT=false
